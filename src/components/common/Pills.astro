---
interface Props {
  icon: HTMLElement | string;
  name: string;
}
const { icon, name } = Astro.props;
---

<div
  class="py-2 px-4 bg-base text-lavender shadow-red shadow hover:shadow-red hover:shadow-md cursor-pointer flex items-center justify-center gap-2 rounded-lg text-center"
>
  <div>{icon}</div>
  <p class="font-bold">{name}</p>
</div>
