---
import Pills from "./common/Pills.astro";
import SkillIcon from '../utils/skills.json'
---

<section
  class="my-4  flex flex-col items-center justify-center"
  id="skills"
>

  <div class="py-4 px-6 mb-4 rounded bg-text w-full">
    <h1 class="font-medium text-2xl text-crust">About my tech stacks</h1>
  </div>
  <div class="w-full px-6 py-16 rounded border-text border-solid border-2">
    <div class="text-crust grid grid-cols-5 gap-5  justify-center">
      {SkillIcon.map(skill=><Pills icon={Object.values(skill)[0]} name={Object.keys(skill)[0]}/>)}
    </div>
  </div>
</section>
